<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="character"
            type="com.example.rickandmortyapp.model.CharacterResult" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.DetailsFragment">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:textAlignment="center"
                android:background="@color/white"
                app:titleTextColor="?attr/colorPrimary"
                android:theme="@style/ToolbarTheme"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@{character.name}" />

            <ImageView
                android:id="@+id/iv_character_details_image"
                loadImageFromUrlWithoutTransformation="@{character.image}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/characterImage"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toTopOf="@+id/tv_character_details_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_character_details_name"
                android:text="@{@string/character_name_detail(character.name)}"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/dimen_36sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_character_details_gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_character_details_image" />

            <TextView
                android:id="@+id/tv_character_details_gender"
                android:text="@{@string/character_gender_detail(character.gender)}"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/dimen_24sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_character_details_species"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_character_details_name" />

            <TextView
                android:id="@+id/tv_character_details_species"
                android:text="@{@string/character_species_detail(character.species)}"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/dimen_24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_character_details_gender" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>